<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/headlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/set_sfa_mian_bg"
            android:orientation="vertical" >

            <!-- 个人信息 -->

            <RelativeLayout
                android:id="@+id/ll_personalInfo"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="vertical" >

                <TextView
                    style="@style/setting_textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="个人信息"
                    android:textColor="@color/black"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/tv_settting_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dip"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/common_home_index_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/common_line_2x" />

            <!-- 密码修改 -->

            <RelativeLayout
                android:id="@+id/ll_modifyPassword"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="vertical" >

                <TextView
                    style="@style/setting_textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="密码修改"
                    android:textColor="@color/black"
                    android:textSize="16dip" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/common_home_index_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/common_line_2x" />

            <!-- 意见反馈 -->

            <RelativeLayout
                android:id="@+id/ll_feedback"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="vertical" >

                <TextView
                    style="@style/setting_textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="意见反馈"
                    android:textColor="@color/black"
                    android:textSize="16dip" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/common_home_index_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/common_line_2x" />

            <!-- 北京音乐 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:visibility="gone"
                android:orientation="vertical" >

                <TextView
                    style="@style/setting_textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="背景音乐"
                    android:textColor="@color/black"
                    android:textSize="16dip" />

                <com.pactera.nci.common.view.SlipButton
                    android:id="@+id/slipButton2"
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:visibility="gone"
                android:background="@drawable/common_line_2x" />

            <!-- 掌上新华二维码 -->

            <RelativeLayout
                android:id="@+id/ll_twoDimensionCode"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="vertical" >

                <TextView
                    style="@style/setting_textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="掌上新华二维码"
                    android:textColor="@color/black"
                    android:textSize="16dip" />

                <ImageView
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:src="@drawable/common_home_index_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 检测新版本 -->

        <RelativeLayout
            android:id="@+id/rl_check_update"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/set_sfa_mian_bg"
            android:orientation="vertical" >

            <TextView
                style="@style/setting_textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="检测新版本"
                android:textColor="@color/black"
                android:textSize="16dip" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:src="@drawable/common_home_index_arrow" />
        </RelativeLayout>

        <!-- 关于掌上新华 -->

        <RelativeLayout
            android:id="@+id/ll_about"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/set_sfa_mian_bg"
            android:orientation="vertical" >

            <TextView
                style="@style/setting_textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="关于掌上新华"
                android:textColor="@color/black"
                android:textSize="16dip" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:src="@drawable/common_home_index_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_welcome_page"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/set_sfa_mian_bg"
            android:orientation="vertical" >

            <TextView
                style="@style/setting_textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="显示欢迎界面"
                android:textColor="@color/black"
                android:textSize="16dip" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:src="@drawable/common_home_index_arrow" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_exit"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:background="@drawable/set_btn_red_selector"
            android:text="登  录"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

</ScrollView>