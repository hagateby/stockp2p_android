<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="25dp" >

    <RelativeLayout
        android:id="@+id/list_modules_iv_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/list_modules_iv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/framework_listmodules_notlogin" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/list_modules_iv_pictureafter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/list_modules_iv_loginafter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp" >

            <ImageView
                android:id="@+id/list_modules_tv_x1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/framework_listmodules_login" />

            <ImageView
                android:id="@+id/list_modules_tv_x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/list_modules_tv_x1"
                android:background="@drawable/framework_listmodules_gold" />

            <TextView
                android:id="@+id/list_modules_tv_user"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/list_modules_tv_x2"
                android:ellipsize="end"
                android:text="xxxx:xxxxxxxxxxxxx"
                android:textColor="#00a3e8" />

            <RelativeLayout
                android:id="@+id/list_modules_tv_x4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp" >

                <ImageView
                    android:id="@+id/list_modules_tv_inforxx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/framework_listmodules_num" />

                <TextView
                    android:id="@+id/list_modules_tv_infor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/framework_listmodules_infor"
                    android:visibility="invisible" />
            </RelativeLayout>

            <View
                android:id="@+id/list_modules_tv_x3"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/list_modules_tv_x4"
                android:background="#23a8e3" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/list_modules_bt_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:background="@drawable/framework_list_bt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/list_modules_bt_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12dp"
                android:background="@drawable/framework_list_bt"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>