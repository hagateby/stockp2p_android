<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17.0dip"
        android:layout_marginRight="17.0dip"
        android:layout_marginTop="9.0dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/register_stage3" />

        <TextView
            style="@style/customStyle.DarkGreen_51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/register_title_step3" />
    </RelativeLayout>

    <EditText
        android:id="@id/edtNickname"
        style="@style/customStyle.DarkGreen_51"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/simple_edit_height"
        android:layout_marginLeft="17.0dip"
        android:layout_marginRight="17.0dip"
        android:layout_marginTop="11.0dip"
        android:background="@drawable/round_corner_rectangle_white_background"
        android:drawableLeft="@drawable/icon_user"
        android:drawablePadding="10.0dip"
        android:hint="@string/input_nickname"
        android:padding="8.0dip"
        android:textColorHint="@color/hint_color" />

    <EditText
        android:id="@id/edtPassWD"
        style="@style/customStyle.DarkGreen_51"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/simple_edit_height"
        android:layout_marginLeft="17.0dip"
        android:layout_marginRight="17.0dip"
        android:layout_marginTop="12.0dip"
        android:background="@drawable/round_corner_rectangle_white_background"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10.0dip"
        android:hint="@string/input_password"
        android:inputType="textPassword"
        android:longClickable="false"
        android:maxLength="30"
        android:padding="8.0dip"
        android:textColorHint="@color/hint_color" />

    <EditText
        android:id="@id/edtPassWD_Confirm"
        style="@style/customStyle.DarkGreen_51"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/simple_edit_height"
        android:layout_marginLeft="17.0dip"
        android:layout_marginRight="17.0dip"
        android:layout_marginTop="12.0dip"
        android:background="@drawable/round_corner_rectangle_white_background"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="10.0dip"
        android:hint="@string/input_password_confirm"
        android:inputType="textPassword"
        android:longClickable="false"
        android:maxLength="30"
        android:padding="8.0dip"
        android:textColorHint="@color/hint_color" />

    <Button
        android:id="@id/btnRegister"
        style="@style/commonBlueButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="17.0dip"
        android:layout_marginRight="17.0dip"
        android:layout_marginTop="21.329987dip"
        android:background="@drawable/button_blue_bg_selector"
        android:gravity="center"
        android:text="@string/register" />

</LinearLayout>