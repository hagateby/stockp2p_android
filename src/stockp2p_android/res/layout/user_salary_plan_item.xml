<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@id/block"
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="@color/common_bg" />

    <View
        android:id="@id/seperator_line_2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grey_line_height"
        android:background="@drawable/gray_line" />

    <LinearLayout
        android:id="@id/ll_title"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="17.0dip"
        android:paddingRight="17.0dip" >

        <TextView
            android:id="@id/term_no"
            style="@style/customStyle.LightBlack_48"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />
    </LinearLayout>

    <View
        android:id="@id/seperator"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grey_line_height"
        android:background="@drawable/gray_line" />

    <RelativeLayout
        android:id="@id/title_line"
        android:layout_width="fill_parent"
        android:layout_height="73.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="17.0dip"
        android:paddingRight="17.0dip" >

        <TextView
            android:id="@id/field1_title"
            style="@style/customStyle.DarkGreen_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="已获收益" />

        <TextView
            android:id="@id/field2_title"
            style="@style/customStyle.DarkGreen_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_toRightOf="@id/field1_title"
            android:text="累计投资" />

        <TextView
            android:id="@id/field3_title"
            style="@style/customStyle.DarkGreen_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/field4_title"
            android:layout_toRightOf="@id/field2_title"
            android:gravity="right"
            android:text="月投资额"
            android:textColor="@color/textcolor_selector_darkgreen" />

        <TextView
            android:id="@id/field4_title"
            style="@style/customStyle.DarkGreen_42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15.0dip"
            android:gravity="right"
            android:text="预期年收益" />

        <TextView
            android:id="@id/field1"
            style="@style/customStyle.Blue_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/field1_title"
            android:layout_below="@id/field1_title"
            android:layout_marginTop="10.0dip"
            android:gravity="left"
            android:text="1000"
            android:textStyle="bold" />

        <TextView
            android:id="@id/field2"
            style="@style/customStyle.Blue_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/field2_title"
            android:layout_alignTop="@id/field1"
            android:text="100000"
            android:textStyle="bold" />

        <TextView
            android:id="@id/field3"
            style="@style/customStyle.Blue_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/field3_title"
            android:layout_alignTop="@id/field1"
            android:gravity="right"
            android:text="1000"
            android:textStyle="bold" />

        <TextView
            android:id="@id/field4"
            style="@style/customStyle.Blue_48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/field4_title"
            android:layout_alignTop="@id/field1"
            android:gravity="right"
            android:text="10%"
            android:textStyle="bold" />
    </RelativeLayout>

    <include layout="@layout/dash_separator_with_margin" />

    <RelativeLayout
        android:id="@id/user_salary_plan_extra_line"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:paddingLeft="17.0dip"
        android:paddingRight="17.0dip" >

        <Button
            android:id="@id/btn_pay"
            style="@style/customStyle.White_51"
            android:layout_width="120.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/shape_orange_bg"
            android:focusable="false"
            android:text="@string/now_to_pay" />

        <TextView
            android:id="@id/pay_deadline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_pay"
            android:drawableLeft="@drawable/icon_pay_deadline_selector"
            android:drawablePadding="5.0dip"
            android:text="@string/test"
            android:textColor="@color/extra_line_text_color_selector"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <View
        android:id="@id/seperator_line_1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/grey_line_height"
        android:background="@drawable/gray_line" />

</LinearLayout>