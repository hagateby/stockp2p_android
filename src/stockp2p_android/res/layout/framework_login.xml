<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/framework_bk"
        android:orientation="vertical" >

        <!-- 移动支付暂时不上线,注释掉带手机号登录功能的界面,要上线时,将下方注释取消掉,并删除line58至line79和line200 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/framework_login_picture" />

        <LinearLayout
            android:id="@+id/login_bt_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="visible" >

            <Button
                android:id="@+id/login_bt_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/framework_login_account_way_on"
                android:textColor="#ee0e3d"
                android:textSize="20dp" />

            <Button
                android:id="@+id/login_bt_tel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/framework_login_tel_way"
                android:textColor="#666666"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="30dp" >

            <!-- 用户名 -->

            <LinearLayout
                android:id="@+id/login_ll_accountuser"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/framework_login_username2"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/framework_login_username1" />

                <EditText
                    android:id="@+id/login_et_accountuser"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:hint="请输入用户名"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textColorHint="#666666"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_ll_accountphone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/framework_login_username2"
                android:orientation="horizontal"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/framework_login_username1" />
                <EditText
                    android:id="@+id/login_et_accountphone"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:hint="实名认证时的手机号"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#666666"
                    android:textColorHint="#666666"
                    android:textSize="15dp" />
            </LinearLayout>
            <!-- 密码 -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/framework_login_username2"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/framework_login_password1" />

                    <EditText
                        android:id="@+id/login_et_password"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:gravity="center_vertical"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="#666666"
                        android:textColorHint="#666666"
                        android:textSize="15dp" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/login_cb_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:button="@drawable/framework_button_eyes"
                    android:paddingRight="10dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/relativelayout"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/login_bt_login"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/framework_login_bt"
                    android:gravity="center"
                    android:text="登\t录"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/login_bt_resgister"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/framework_login_bt"
                    android:gravity="center"
                    android:text="注\t册"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/login_bt_forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@null"
                android:drawableLeft="@drawable/framework_login_forget_icon"
                android:padding="10dp"
                android:text=" 忘记密码"
                android:textColor="#666666"
                android:textSize="12dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/login_tv_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="温馨提示:"
                android:textColor="#666666"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:src="@drawable/framework_login_logo" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>