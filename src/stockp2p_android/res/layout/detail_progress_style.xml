<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="@color/progress_background_color" android:endColor="@color/progress_background_color" android:angle="270.0" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/progress_blue_color" />
                <corners android:radius="3.0dip" />
            </shape>
        </clip>
    </item>
</layer-list>