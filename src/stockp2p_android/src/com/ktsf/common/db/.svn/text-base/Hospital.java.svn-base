package com.pactera.nci.common.db;

import java.util.ArrayList;

import android.database.Cursor;
import android.database.sqlite.SQLiteDatabase;

/**
 * 定点医院
 * @author haix
 *
 */
public class Hospital {
	
	private int id;
	private String province;//省份
	private String provinceCode;//省份code
	private String city;//城市
	private String cityCode;//城市code
	private String address;//地址
	private String hosLevel;//医院级别
	private String tel;//电话
	private String latitude;//纬度
	private String longitude;//经度
	private String hosName;//医院名称
	private String remark;
	private String opeFlag;//操作标志c创建u更新d删除
	private String authority;//"综合"
	
	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getProvince() {
		return province;
	}

	public void setProvince(String province) {
		this.province = province;
	}

	public String getCity() {
		return city;
	}

	public void setCity(String city) {
		this.city = city;
	}

	public String getAddress() {
		return address;
	}

	public void setAddress(String address) {
		this.address = address;
	}

	public String getTel() {
		return tel;
	}

	public void setTel(String tel) {
		this.tel = tel;
	}

	public String getLatitude() {
		return latitude;
	}

	public void setLatitude(String latitude) {
		this.latitude = latitude;
	}

	public String getLongitude() {
		return longitude;
	}

	public void setLongitude(String longitude) {
		this.longitude = longitude;
	}

	public String getHosName() {
		return hosName;
	}

	public void setHosName(String hosName) {
		this.hosName = hosName;
	}

	public String getRemark() {
		return remark;
	}

	public void setRemark(String remark) {
		this.remark = remark;
	}

	public String getHosLevel() {
		return hosLevel;
	}

	public void setHosLevel(String hosLevel) {
		this.hosLevel = hosLevel;
	}

	public String getOpeFlag() {
		return opeFlag;
	}

	public void setOpeFlag(String opeFlag) {
		this.opeFlag = opeFlag;
	}

	public String getProvinceCode() {
		return provinceCode;
	}

	public void setProvinceCode(String provinceCode) {
		this.provinceCode = provinceCode;
	}

	public String getCityCode() {
		return cityCode;
	}

	public void setCityCode(String cityCode) {
		this.cityCode = cityCode;
	}
	
	public String getAuthority() {
		return authority;
	}

	public void setAuthority(String authority) {
		this.authority = authority;
	}
	
	public static ArrayList<Hospital> findByKey(SQLiteDatabase db, String key, String value){
		Cursor cursor = db.query("hospital", new String[] {"id", "province", "provinceCode", "city", "cityCode", "address", "hosLevel",
				"tel", "latitude", "longitude", "hosName", "remark", "authority"}, key + "=" + value, null, null, null, null);
		int counts = cursor.getCount();
		if(counts == 0 || !cursor.moveToFirst()) {
			return null;
		}
		ArrayList<Hospital> hospitalList = new ArrayList<Hospital>();
		for (int i = 0; i < counts ; i++) {
			Hospital hospital = new Hospital();
			hospital.setId(cursor.getInt(cursor.getColumnIndex("id")));
			hospital.setProvince(cursor.getString(cursor.getColumnIndex("province")));
			hospital.setProvinceCode(cursor.getString(cursor.getColumnIndex("provinceCode")));
			hospital.setCity(cursor.getString(cursor.getColumnIndex("city")));
			hospital.setCityCode(cursor.getString(cursor.getColumnIndex("cityCode")));
			hospital.setAddress(cursor.getString(cursor.getColumnIndex("address")));
			hospital.setHosLevel(cursor.getString(cursor.getColumnIndex("hosLevel")));
			hospital.setTel(cursor.getString(cursor.getColumnIndex("tel")));
			hospital.setLatitude(cursor.getString(cursor.getColumnIndex("latitude")));
			hospital.setLongitude(cursor.getString(cursor.getColumnIndex("longitude")));
			hospital.setHosName(cursor.getString(cursor.getColumnIndex("hosName")));
			hospital.setRemark(cursor.getString(cursor.getColumnIndex("remark")));
			hospital.setAuthority(cursor.getString(cursor.getColumnIndex("authority")));
			hospitalList.add(hospital);
			cursor.moveToNext();
		}
		if (cursor != null) {
			cursor.close();
			cursor = null;
		}
		return hospitalList;
	}
	
	public static ArrayList<Hospital> findByKeyLike(SQLiteDatabase db, String key, String value){
		Cursor cursor = db.query("hospital", new String[] {"id", "province", "provinceCode", "city", "cityCode", "address", "hosLevel",
